{
  "name": "faythe",
  "version": "1.2.1",
  "description": "An easy crypto library to send messages using key encapsulation. A courier for Alice, Bob and friends.",
  "author": "Javi Santos <mail@javisantos.com>",
  "license": "MIT",
  "homepage": "https://github.com/javisantos/faythe",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/javisantos/faythe.git"
  },
  "main": "index.js",
  "module": "main.js",
  "scripts": {
    "test": "tape -r esm test/v1.js | tap-spec",
    "coverage": "rimraf node_modules/.cache && nyc --reporter=text-summary --reporter=html tape test/v1.js",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint src test",
    "build": "rollup -c -m --compact && npm run build:browserify",
    "build:browserify": "browserify main.js -o dist/faythe-browserify.js -t [ babelify --presets [ @babel/preset-env ] --plugins [ @babel/plugin-transform-runtime ] ]",
    "dev": "rollup -c -w -m"
  },
  "dependencies": {
    "@stablelib/cbor": "^1.0.0",
    "@stablelib/newhope": "^1.0.0",
    "bip39": "^3.0.2",
    "canonicalize": "^1.0.3",
    "esm": "^3.2.25",
    "multibase": "^3.0.1",
    "sodium-universal": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "nyc": "^15.1.0",
    "rollup": "^2.33.1",
    "rollup-plugin-browserify-transform": "^1.0.1",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "tap-nyc": "^1.0.3",
    "tap-spec": "^5.0.0",
    "tape": "^5.0.1"
  }
}
